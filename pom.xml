<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 
                             https://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>org.jenkins-ci.plugins</groupId>
    <artifactId>plugin</artifactId>
    <version>4.54</version> <!-- Make sure this exists in Jenkins repo -->
    <relativePath /> <!-- Important: do NOT try to resolve a local parent -->
  </parent>

  <groupId>com.example.jenkins</groupId>
  <artifactId>my-jenkins-plugin</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>hpi</packaging>

  <name>My Jenkins Plugin</name>
  <description>Sample Jenkins plugin</description>
  <url>http://example.com/jenkins-plugin</url>

  <properties>
    <java.level>11</java.level>
  </properties>

  <repositories>
    <repository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </repository>
  </repositories>

  <pluginRepositories>
    <pluginRepository>
      <id>jenkins-releases</id>
      <url>https://repo.jenkins-ci.org/releases/</url>
    </pluginRepository>
  </pluginRepositories>

  <build>
    <plugins>
      <!-- No need to manually declare maven-hpi-plugin or compiler plugin; parent handles that -->
    </plugins>
  </build>

  <dependencies>
    <!-- Jenkins plugin dependencies go here -->
  </dependencies>
</project>
